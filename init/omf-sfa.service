# Systemd broker startup service
[Unit]
Description=omf-sfa reservation Broker
After=syslog.target

[Service]
Type=forking
PIDFile=/var/run/omf-sfa.pid
WorkingDirectory=/root/omf/omf_sfa
ExecStartPre=/bin/rm -f /var/run/omf-sfa.pid
ExecStart=/usr/bin/ruby -I /root/omf/omf_sfa/lib/ /root/omf/omf_sfa/lib/omf-sfa/am/am_server.rb start
Restart=on-abort

[Install]
WantedBy=multi-user.target
